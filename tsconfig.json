{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@environment/*": [
        "environments/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@pages/*": [
        "app/pages/*"
      ],
      "@utils/*": [
        "app/utils/*"
      ],
    },
    "module": "esnext",
    "useDefineForClassFields": false
  }
}